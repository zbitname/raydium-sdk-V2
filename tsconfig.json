{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node16/tsconfig.json",

  "compilerOptions": {
    // "target": "ES2020",
    "lib": [
      "es2021",
      "dom",
    ],
    // "moduleResolution": "NodeNext",
    "module": "CommonJS",
    "outDir": "./lib",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "lib",
    "dist"
  ],
  "ts-node": {
    "files": true,
    "esm": true,
  }
}
